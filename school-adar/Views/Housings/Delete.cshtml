@model school_adar.Models.Housing

@{
    ViewBag.Title = "Delete";
}

<style>
    .cardShadow {
        width: 100%;
        min-height: 100vh;
        overflow-y: scroll;
        background: rgba(0, 0, 0, 0.5);
        position: fixed;
        top: 0;
        left: 0;
    }
</style>

<div class="cardShadow">
    @using (Html.BeginForm("Delete", "Housings", FormMethod.Post, new { @class = "center", enctype = "multipart/form-data", style = "margin-top:9rem top:5rem" })) 
    {
        @Html.AntiForgeryToken()
        <div class="card text-white bg-danger mb-3" style="max-width: 20rem;">
            <div class="card-header">Delete</div>
            <div class="card-body">
                <h4 class="card-title">Are you sure you want to delete this?</h4>
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-secondary" /> |
                </div>
            </div>
        </div>  
    }
</div>
